{
	"name": "@natlibfi/melinda-record-import-transformer-fono",
	"description": "Fono record transformer for the Melinda record batch import system",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-record-import-transformer-fono",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-record-import-transformer-fono/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-record-import-transformer-fono.git"
	},
	"license": "AGPL-3.0+",
	"version": "1.0.0",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"start": "node dist/index.js",
		"cli": "node dist/cli.js",
		"check-deps": "npm-check --skip-unused --packageFile package.json;exit 0",
		"lint": "eslint src",
		"lint:dev": "eslint --fix src",
		"test:base": "cross-env NODE_ENV=test mocha --require @babel/register",
		"test": "npm run lint && npm run test:base -- src/**/*.spec.js",
		"test:dev": "npm run lint:dev && npm run test:base -- src/**/*.spec.js",
		"build": "babel src --source-maps --delete-dir-on-start --out-dir=dist",
		"build:dev": "npm run build && npm run check-deps",
		"watch": "cross-env DEBUG=1 NODE_ENV=debug nodemon --watch src --exec 'npm run test:dev'",
		"watch:build": "cross-env DEBUG=1 NODE_ENV=debug nodemon --watch src --exec 'babel-node src/index.js'",
		"test:only": "nodemon --watch src --exec npm run test:base -- src/**/*.spec.js"
	},
	"dependencies": {
		"@natlibfi/marc-record": "^4.0.0",
		"@natlibfi/marc-record-validate": "^5.0.0",
		"@natlibfi/marc-record-validators-melinda": "^7.0.1",
		"@natlibfi/melinda-commons": "^7.0.0",
		"@natlibfi/melinda-record-import-commons": "^4.2.0",
		"get-stream": "^5.1.0",
		"moment": "^2.22.2"
	},
	"devDependencies": {
		"@babel/cli": "^7.5.5",
		"@babel/core": "^7.5.5",
		"@babel/node": "^7.5.5",
		"@babel/preset-env": "^7.5.5",
		"@babel/register": "^7.5.5",
		"babel-eslint": "^10.0.2",
		"babel-plugin-rewire": "^1.2.0",
		"chai": "^4.2.0",
		"cross-env": "^5.2.0",
		"eslint": "^5.16.0",
		"eslint-config-xo": "^0.26.0",
		"eslint-plugin-import": "^2.18.2",
		"mocha": "^6.2.0",
		"nodemon": "^1.19.1",
		"npm-check": "^5.7.1",
		"sinon": "^7.3.2",
		"sinon-chai": "^3.3.0"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"plugins": [
			"import"
		],
		"extends": [
			"xo",
			"plugin:import/errors"
		],
		"rules": {
			"prefer-arrow-callback": [
				"error"
			]
		},
		"env": {
			"mocha": true
		}
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "8"
					}
				}
			]
		],
		"env": {
			"test": {
				"plugins": [
					"rewire"
				]
			}
		}
	}
}
